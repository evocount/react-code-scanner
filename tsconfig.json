{
	"compilerOptions": {
		"module": "esnext",
		"target": "es5",
		"lib": [ "es5", "dom" ],
		"moduleResolution": "node",
		"outDir": "build/esm",
		"jsx": "react",
		"sourceMap": true,
		"declaration": true,
		"strict": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx"
	]
}
