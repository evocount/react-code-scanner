{
	"compilerOptions": {
		"module": "esnext",
		"target": "es5",
		"lib": [ "es6", "dom", "es2016", "es2017" ],
		"sourceMap": true,
		"moduleResolution": "node",
		"strict": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "build",
		"jsx": "react",
		"resolveJsonModule": true,
		"declaration": true,
		"declarationDir": "build"
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"types"
	],
	"exclude": [
		"node_modules",
		"build"
	]
}
